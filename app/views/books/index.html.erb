<h1>Books</h1>



<h2>New book</h2>
<%= form_with model: @book.new do |f| %>

  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label>Body</label>
    <%= f.text_field :body %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>